{
    "compilerOptions": {
        "outDir": "./dist/js",
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "module": "CommonJS",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./src/**/**/*"
    ]
}