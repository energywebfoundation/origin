{
  "name": "@energyweb/origin",
  "description": "",
  "license": "GPL-3.0",
  "author": "slock.it GmbH; Martin Kuechler, martin.kuechler@slock.it; Heiko Burkhardt, heiko.burkhardt@slock.it",
  "homepage": "https://github.com/energywebfoundation/ew-origin-lib#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/ew-origin-lib.git"
  },
  "bugs": {
    "url": "https://github.com/energywebfoundation/ew-origin-lib"
  },
  "version": "1.2.0",
  "main": "dist/js/src/index.js",
  "files": [
    "contracts",
    "dist/js/build",
    "dist/js/src"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "yarn build:ts",
    "build:static": "yarn compile && yarn extractABI",
    "build:ts": "tsc -b tsconfig.build.json --verbose --pretty",
    "clean": "rm -rf dist dist-shakeable build db.sqlite",
    "compile": "truffle compile",
    "deploy-contracts": "truffle migrate",
    "extractABI": "node ./scripts/extractABI.js",
    "flatten-contracts": "truffle-flattener contracts/Origin/* > build/flattenedContracts.sol && node scripts/removeExperimentalDuplicates.js build/flattenedContracts.sol",
    "lint": "solium -d contracts",
    "lint-fix": "solium -d contracts --fix",
    "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20 -p 8547",
    "start-backend": "PORT=3032 node ../../node_modules/@energyweb/origin-backend/dist/js/src/index.js",
    "test": "mocha -r ts-node/register src/test/*.test.ts --timeout 60000 --exit",
    "test:concurrent": "concurrently --success first --kill-others -n eth,backend,test \"yarn start-ganache\" \"rm -rf db.sqlite && yarn start-backend\" \"wait-on tcp:8547 && yarn test\"",
    "test:contracts": "yarn test:concurrent",
    "prettier": "prettier --write --config-precedence file-override './src/**/*'"
  },
  "types": "dist/js/src/index.d.ts",
  "dependencies": {
    "@energyweb/asset-registry": "^1.2.0",
    "@energyweb/user-registry": "^1.2.0",
    "@energyweb/utils-general": "^1.2.0",
    "web3": "1.2.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@energyweb/erc-test-contracts": "^1.2.0",
    "@energyweb/origin-backend": "^1.2.0",
    "@types/web3": "1.0.20",
    "axios": "0.19.0",
    "ethlint": "1.2.5",
    "fs-extra": "8.1.0",
    "ganache-cli": "6.4.5",
    "moment": "2.24.0",
    "truffle-flattener": "1.4.2"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts",
  "gitHead": "54beaf7fe6686810de74ca290daf99cbde510f9d",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
