FROM node:14-alpine

ARG VERSION=latest

RUN apk --no-cache add make gcc g++ python bash
RUN mkdir -p /var/db

RUN mkdir /var/deployment
COPY ./ /var/deployment

WORKDIR /var/deployment/apps/origin-backend-irec-app

RUN for i in 1 2 3 4 5; do yarn global add @energyweb/origin-backend-irec-app@${VERSION} && break || sleep 15; done

CMD ["/bin/bash", "-c", "yarn migrate:docker && origin-backend-app"]