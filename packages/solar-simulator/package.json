{
  "name": "@energyweb/solar-simulator",
  "version": "0.2.3",
  "description": "",
  "scripts": {
    "build": "yarn build:ts",
    "build:ts": "tsc -b tsconfig.build.json --verbose --pretty",
    "start": "concurrently --restart-tries 3 --restart-after 1500 -n simulator,consumer \"yarn start-simulation\" \"yarn start-consuming-api\"",
    "start-simulation": "ts-node src/simulatorService.ts",
    "start-consuming-api": "ts-node src/consumerService.ts",
    "import-irec-assets": "ts-node src/importIRECAssets.ts -i irec-example/irec-thailand.csv",
    "fund-assets-smart-meters": "ts-node src/fundAssets.ts",
    "prettier": "prettier --write --config-precedence file-override './src/**/*'",
    "lint": "eslint 'src/**/*{.ts,.tsx}'",
    "lint-fix": "eslint 'src/**/*{.ts,.tsx}' --fix",
    "clean": "shx rm -rf dist",
    "precommit": "lint-staged"
  },
  "author": "",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@energyweb/asset-registry": "1.3.3",
    "@energyweb/market": "1.3.3",
    "@energyweb/origin-backend-client": "1.0.1",
    "@energyweb/utils-general": "1.3.1",
    "@types/moment-timezone": "0.5.12",
    "axios": "0.19.0",
    "bn.js": "5.0.0",
    "body-parser": "1.19.0",
    "commander": "4.0.0",
    "cors": "2.8.5",
    "csv-parse": "4.6.5",
    "ethers": "4.0.39",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "ganache-cli": "6.5.0",
    "geo-tz": "5.0.5",
    "moment": "2.24.0",
    "moment-timezone": "0.5.27",
    "web3": "1.2.1",
    "winston": "3.2.1"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts",
  "private": true
}
