FROM energyweb/origin-backend-app:canary

RUN mkdir /var/migration-config
COPY config/* /var/migration-config/

WORKDIR /var/deployment/apps/origin-backend-app

CMD ["/bin/bash","-c", "origin-backend-app/deployment/packages/apps/origin-backend-app/node_modules/.bin/typeorm migration:run --config exchange/dist/js/ormconfig.js && \
                        origin-backend-app/deployment/packages/apps/origin-backend-app/node_modules/.bin/typeorm migration:run --config origin-backend/dist/js/ormconfig.js && \
                        origin-backend-app/deployment/packages/apps/origin-backend-app/node_modules/.bin/typeorm migration:run --config origin-organization-irec-api/dist/js/ormconfig.js && \
                        origin-backend-app/deployment/packages/apps/origin-backend-app/node_modules/.bin/typeorm migration:run --config issuer-api/dist/js/ormconfig.js && \
                        migrations/bin/migrations -c /var/migration-config/demo-config.json -s /var/migration-config/seed.sql && \
                        origin-backend-app"]