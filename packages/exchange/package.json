{
    "name": "@energyweb/exchange",
    "version": "0.3.1",
    "description": "A service project hosting order book based exchange",
    "homepage": "https://github.com/energywebfoundation/origin/tree/master/packages/exchange#readme",
    "author": "EnergyWeb DevHub GmbH; Piotr Kosinski, piotr.kosinski@energyweb.org",
    "license": "GPL-3.0",
    "main": "dist/js/src/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/energywebfoundation/origin.git"
    },
    "bugs": {
        "url": "https://github.com/energywebfoundation/origin/issues"
    },
    "scripts": {
        "build": "yarn build:ts",
        "build:ts": "nest build -p tsconfig.build.json --tsc",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"src/**/*{.ts,.tsx}\"",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "test": "jest",
        "test:concurrent": "yarn test",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "concurrently --success first --kill-others -n eth,test \"yarn start-ganache\"  \"wait-on tcp:8580 && jest --config ./test/jest-e2e.json --forceExit\"",
        "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20 -p 8580",
        "clean": "shx rm -rf dist dist-shakeable"
    },
    "dependencies": {
        "@energyweb/exchange-core": "0.1.3",
        "@energyweb/exchange-token-account": "0.1.2",
        "@energyweb/issuer": "0.12.0",
        "@energyweb/origin-backend-core": "1.2.0",
        "@energyweb/utils-general": "7.0.0",
        "@nestjs/common": "6.11.6",
        "@nestjs/config": "0.2.2",
        "@nestjs/core": "6.11.6",
        "@nestjs/passport": "6.2.0",
        "@nestjs/platform-express": "6.11.6",
        "@nestjs/schedule": "0.2.0",
        "@nestjs/swagger": "4.3.1",
        "@nestjs/typeorm": "6.3.3",
        "bn.js": "^5.1.1",
        "ethers": "4.0.45",
        "immutable": "4.0.0-rc.12",
        "pg": "^7.17.1",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.4",
        "swagger-ui-express": "4.1.3",
        "typeorm": "0.2.22",
        "class-validator": "0.11.0"
    },
    "devDependencies": {
        "@nestjs/cli": "6.14.2",
        "@nestjs/schematics": "6.9.4",
        "@nestjs/testing": "6.11.6",
        "@types/express": "4.17.2",
        "@types/jest": "25.1.1",
        "@types/node": "12.12.27",
        "@types/supertest": "2.0.8",
        "eslint-plugin-jest": "23.7.0",
        "jest": "25.1.0",
        "prettier": "1.19.1",
        "supertest": "4.0.2",
        "ts-jest": "25.1.0",
        "ts-loader": "6.2.1",
        "ts-node": "8.6.2",
        "tsconfig-paths": "3.9.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
