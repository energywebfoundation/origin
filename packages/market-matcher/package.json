{
    "name": "@energyweb/market-matcher",
    "description": "",
    "license": "GPLv3",
    "author": "",
    "homepage": "https://github.com/energywebfoundation/origin/tree/master/packages/market-matcher#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/energywebfoundation/origin.git"
    },
    "bugs": {
        "url": "https://github.com/energywebfoundation/origin/issues"
    },
    "version": "1.1.0",
    "main": "dist/js/src/index.js",
    "scripts": {
        "build": "yarn generate-schemas && yarn build-ts",
        "build-ts": "tsc -b tsconfig.build.json --verbose --pretty",
        "debug": "node --inspect-brk dist/js/src/main.js",
        "generate-conf-schema": "typescript-json-schema --required --ignoreErrors tsconfig.json IMatcherConf",
        "generate-rule-schema": "typescript-json-schema --required --ignoreErrors tsconfig.json IRuleConf",
        "generate-schemas": "./scripts/buildSchemas.js",
        "generate-sim-flow-schema": "typescript-json-schema --required --ignoreErrors tsconfig.json ISimulationFlow",
        "start": "node dist/js/src/main.js",
        "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20",
        "start-test-backend": "node ../../node_modules/@energyweb/utils-testbackend/dist/js/src/index.js",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'",
        "test": "concurrently --success first --kill-others -n eth,backend,test \"yarn start-ganache\" \"yarn start-test-backend\" \"wait-on tcp:8545 && mocha -r ts-node/register src/test/*.test.ts --exit\"",
        "clean": "rm -rf build dist schemas db.json",
        "build:static": "yarn generate-schemas"
    },
    "types": "dist/js/src/exports.d.ts",
    "dependencies": {
        "@energyweb/asset-registry": "1.1.0",
        "@energyweb/market": "1.1.0",
        "@energyweb/origin": "1.1.0",
        "@energyweb/user-registry": "1.1.0",
        "@energyweb/utils-general": "1.1.0",
        "jsonschema": "1.2.4",
        "log-symbols": "2.2.0",
        "web3": "1.0.0-beta.37",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@energyweb/utils-testbackend": "1.1.0",
        "@types/log-symbols": "2.0.0",
        "@types/web3": "1.0.14",
        "fs-extra": "8.0.1",
        "ganache-cli": "6.6.0",
        "lint-staged": "8.1.7",
        "ts-mockito": "2.4.2"
    },
    "postinstall": "rm -f node_modules/web3/index.d.ts",
    "gitHead": "54beaf7fe6686810de74ca290daf99cbde510f9d",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "files": [
        "dist/js/src",
        "dist/js/schemas"
    ]
}
