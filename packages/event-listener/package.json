        "@types/web3": "1.0.19",
        "ganache-cli": "6.1.8",
        "mocha": "6.2.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "files": [
        "dist/js/src"
    ]
