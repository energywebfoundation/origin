    "version": "2.0.0",
    "main": "dist/js/src/index.js",
    "bin": {
        "event-listener": "./bin/event-listener"
    },
    "scripts": {
        "start": "ts-node src/main.ts",
        "start-all": "yarn start",
        "build": "yarn build:ts",
        "build:ts": "tsc -b tsconfig.build.json --verbose --pretty",
        "build:container:canary": "make build-canary push",
        "build:container:latest": "make build-latest push",
        "lint": "eslint \"src/**/*{.ts,.tsx}\"",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'",
        "test": "mocha -r ts-node/register src/test/**/*.test.ts --timeout 60000 --exit",
        "test:concurrent": "concurrently --success first --kill-others -n eth,test \"yarn start-ganache\" \"wait-on tcp:8550 && yarn test\"",
        "start-ganache": "ganache-cli -q -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20 -p 8550",
        "clean": "shx rm -rf dist db.sqlite",
        "precommit": "lint-staged"
    },
    "types": "dist/js/src/exports.d.ts",
    "dependencies": {
        "@energyweb/device-registry": "0.9.0",
        "@energyweb/market": "2.0.0",
        "@energyweb/market-matcher-core": "1.0.1",
        "@energyweb/origin": "2.0.0",
        "@energyweb/origin-backend-client": "1.1.0",
        "@energyweb/user-registry": "1.4.0",
        "@energyweb/utils-general": "1.4.0",
        "@types/mandrill-api": "^1.0.30",
        "@types/nodemailer": "^6.2.1",
        "commander": "^4.0.1",
        "dotenv": "^8.2.0",
        "mandrill-api": "1.0.45",
        "moment": "2.24.0",
        "nodemailer": "6.4.1",
        "polly-js": "1.6.5",
        "web3": "1.2.4",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "ganache-cli": "6.7.0",
        "mocha": "6.2.2"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "files": [
        "bin",
        "dist/js/src"
    ]
}
