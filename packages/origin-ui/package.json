{
    "private": true,
    "name": "@energyweb/origin-ui",
    "version": "2.0.0",
    "scripts": {
        "build": "yarn config-env && node --max-old-space-size=8192 ./node_modules/.bin/webpack --config webpack/prod.config.js",
        "build:ts": "tsc -b tsconfig.build.json --verbose --pretty",
        "build:full": "yarn config-env && webpack --config webpack/prod.config.js",
        "build:container:canary": "yarn build:full && make build-canary push-dockerhub",
        "build:container:latest": "yarn build:full && make build-latest push-dockerhub",
        "deploy:container:heroku:canary": "make push-heroku-canary",
        "config-env": "bash env.sh",
        "start": "yarn config-env && cross-env NODE_OPTIONS=\"--max_old_space_size=8192\" webpack-dev-server --config webpack/dev.config.js --watch",
        "start-all": "yarn start",
        "lint": "eslint \"src/**/*{.ts,.tsx}\"",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "precommit": "lint-staged",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'",
        "clean": "shx rm -rf dist"
    },
    "dependencies": {
        "@energyweb/origin-ui-core": "1.0.0",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "file-loader": "6.0.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "ts-loader": "6.2.2",
        "url-loader": "4.1.0",
        "webpack": "4.42.1"
    },
    "devDependencies": {
        "@types/react": "16.9.34",
        "@types/react-dom": "16.9.6",
        "copy-webpack-plugin": "5.1.1",
        "css-loader": "3.5.2",
        "eslint-plugin-react": "7.19.0",
        "fork-ts-checker-webpack-plugin": "4.1.3",
        "html-webpack-plugin": "4.2.0",
        "node-sass": "4.13.1",
        "sass-loader": "8.0.2",
        "source-map-loader": "0.2.4",
        "style-loader": "1.1.4",
        "ts-jest": "25.4.0",
        "webpack-cli": "3.3.11",
        "webpack-dev-server": "3.10.3",
        "webpack-merge": "4.2.2"
    }
}
